{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist/lambdas",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "__mocks__/axios.js"]
}
